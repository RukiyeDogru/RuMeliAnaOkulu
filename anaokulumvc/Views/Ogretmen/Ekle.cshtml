@model ogretmen

<style>

    .input-validation-error {
        border-color: red;
    }


    /*.field-validation-error
    {
        background-color:yellow;
        color:white;
        border:5px;
    }*/


    .validation-summary-errors {
        background-color: red;
        color: white;
        border-radius: 5px;
    }
</style>






<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Öğretmen Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("Ekle", "Ogretmen", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {


        <div class="card-body">

            @if (ViewBag.Hata != null)
            {

                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-ban"></i> UYARI! </h5>

                    @ViewBag.Hata

                </div>
            }

            @Html.ValidationSummary()

            <div class="form-group">
                @*<label>Ad</label>*@
                @Html.LabelFor(x => x.ad)
                @*<input name="ad" class="form-control" placeholder="Adınızı giriniz">*@
                @Html.TextBoxFor(x => x.ad, new { @class = "form-control", @placeholder = "Adınızı giriniz" })
                @*@Html.ValidationMessageFor(x => x.ad)*@
            </div>
            <div class="form-group">
                @*<label>Soyad</label>*@
                @Html.LabelFor(x => x.soyad)
                @*<input name="soyad" class="form-control" placeholder="Soyadınızı giriniz">*@
                @Html.TextBoxFor(x => x.soyad, new { @class = "form-control", @placeholder = "Soyadınızı giriniz" })
                @*@Html.ValidationMessageFor(x => x.soyad)*@
            </div>
            <div class="form-group">
                @*<label>Eposta</label>*@
                @Html.LabelFor(x => x.eposta)
                @*<input type="email" name="eposta" class="form-control" placeholder="Epostanızı giriniz">*@
                @Html.TextBoxFor(x => x.eposta, new { @class = "form-control", @placeholder = "Epostanızı giriniz" })
                @*@Html.ValidationMessageFor(x => x.eposta)*@
            </div>
            <div class="form-group">
                @*<label>Şifre</label>*@
                @Html.LabelFor(x => x.sifre)
                @*<input type="password" name="sifre" class="form-control" placeholder="Şifrenizi giriniz">*@
                @Html.TextBoxFor(x => x.sifre, new { @class = "form-control", @placeholder = "Şifrenizi giriniz" })
                @*@Html.ValidationMessageFor(x => x.sifre)*@

            </div>
            
            <div class="form-group">
                @Html.LabelFor(x => x.brans)
                @Html.TextBoxFor(x => x.brans, new { @class = "form-control", @placeholder = "Branşınızı giriniz" })

            </div>



        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }
</div>
