@model List<duyuru>
@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Duyurular</h3>
        <div class="card-tools">
            <a href="/Duyuru/DuyuruEkle" class="btn btn-success">
                <i class="fa fa-plus"> </i>
                Duyuru Ekle
            </a>

        </div>
    </div>

    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-condensed">

            <thead>
                <tr>
                    @*<th style="width:50px;">Resim</th>*@
                    <th>Duyuru Başlığı</th>
                    <th>İçerik</th>
                    <th>Duyuru Tarihi</th>

                    <th style="width:250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dyr in Model)
                {
                <tr>
                    @*<td>
            <img src="~/Content/Resimler/Kullanici/@ogrt.resim" width="40" />
        </td>*@
                    <td>@dyr.baslik</td>
                    <td>@dyr.icerik</td>
                    <td>@dyr.tarih.Value.ToShortDateString()</td>
                    



                    <td>
                        @*<a href="/Ogeretmen/Index/@ogrt.ogretmenID" class="btn btn-warning" title="Test">

            <i class="fa fa-search"></i>*@
                        @*</a>
            <a href="/Kullanici/Detay/@ogrt.ogretmenID" class="btn btn-default" title="Detayı görmek için tıklayınız">

                <i class="fa fa-search"></i>
            </a>*@


                        <a href="/Duyuru/DuyuruDuzenle/@dyr.duyuruID" class=" btn btn-info" title="Düzenle">
                            <i class=" fa fa-edit"></i>
                        </a>
                        <a href="/Duyuru/DuyuruSil/@dyr.duyuruID" class=" btn btn-danger" title="Sil" onclick="return confirm('Silmek İstediğinizden Emin Misiniz?')">
                            <i class=" fa fa-trash"></i>
                        </a>




                    </td>


                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

