
@{
    ViewBag.Title = "DuyuruEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model duyuru


<style>

    .input-validation-error {
        border-color: red;
    }


    /*.field-validation-error
    {
        background-color:yellow;
        color:white;
        border:5px;
    }*/


    .validation-summary-errors {
        background-color: red;
        color: white;
        border-radius: 5px;
    }
</style>






<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Duyuru Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("DuyuruEkle", "Duyuru", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {


        <div class="card-body">

            @if (ViewBag.Hata != null)
            {

                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-ban"></i> UYARI! </h5>

                    @ViewBag.Hata

                </div>
            }

            @Html.ValidationSummary()

            <div class="form-group">
                @*<label>Ad</label>*@
                @Html.LabelFor(x => x.baslik)
                @*<input name="ad" class="form-control" placeholder="Adınızı giriniz">*@
                @Html.TextBoxFor(x => x.baslik, new { @class = "form-control", @placeholder = "Başlık giriniz" })
                @*@Html.ValidationMessageFor(x => x.ad)*@
            </div>
            <div class="form-group">
                @*<label>Soyad</label>*@
                @Html.LabelFor(x => x.icerik)
                @*<input name="soyad" class="form-control" placeholder="Soyadınızı giriniz">*@
                @Html.TextBoxFor(x => x.icerik, new { @class = "form-control", @placeholder = "İçerik giriniz" })
                @*@Html.ValidationMessageFor(x => x.soyad)*@
            </div>
            <div class="form-group">
                @*<label>Soyad</label>*@
                @Html.LabelFor(x => x.tarih)
                @*<input name="soyad" class="form-control" placeholder="Soyadınızı giriniz">*@
                @Html.TextBoxFor(x => x.tarih, new { @class = "form-control", @placeholder = "Tarih giriniz" })
                @*@Html.ValidationMessageFor(x => x.soyad)*@
            </div>
            






        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }
</div>




