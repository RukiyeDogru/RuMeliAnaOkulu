@model List<sinif>

    @{
        ViewBag.Title = "Index";
    }

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sınıflar</h3>
        <div class="card-tools">
            <a href="/Sinif/Ekle" class="btn btn-success">
                <i class="fa fa-plus"> </i>
                Sınıf Ekle
            </a>

        </div>
    </div>

    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-condensed">

            <thead>
                <tr>
                    @*<th style="width:50px;">Resim</th>*@
                    <th>Ad</th>
                    <th>Öğretmen Adı Soyadı</th>
                    <th>Öğrenci Sayısı</th>
                   
                    <th style="width:250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var snf in Model)
                {
                <tr>
                    @*<td>
            <img src="~/Content/Resimler/Kullanici/@ogrt.resim" width="40" />
        </td>*@
                    <td>@snf.ad</td>
                    <td>@snf.ogretmen.ad  @snf.ogretmen.soyad</td>
                    <td>@snf.ogrenci.Count</td>


                    <td>
                        @*<a href="/Ogeretmen/Index/@ogrt.ogretmenID" class="btn btn-warning" title="Test">

            <i class="fa fa-search"></i>*@
                        @*</a>
            <a href="/Kullanici/Detay/@ogrt.ogretmenID" class="btn btn-default" title="Detayı görmek için tıklayınız">

                <i class="fa fa-search"></i>
            </a>*@


                        <a href="/Sinif/Duzenle/@snf.sinifID" class=" btn btn-info" title="Düzenle">
                            <i class=" fa fa-edit"></i>
                        </a>
                        <a href="/Sinif/Sil/@snf.sinifID" class=" btn btn-danger" title="Sil" onclick="return confirm('Silmek İstediğinizden Emin Misiniz?')">
                            <i class=" fa fa-trash"></i>
                        </a>




                    </td>


                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

