@model List<duyuru>

@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}




<div class="banner-bottom-grid">
    <div class="banner-bottom-grids">
        <div class="col-md-12 banner-bottom-grid-fig-grid">

            <h3>Duyuru <span>Listesi</span></h3>

        </div>
    </div>

    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-condensed">

            <thead>
                <tr>
                    @*<th style="width:50px;">Resim</th>*@
                    <th>Duyuru Başlığı</th>
                    <th>Duyuru İçerik</th>
                    <th>Duyuru Tarihi</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var duyuru in Model)
                {
                    <tr>
                        @*<td>
                                <img src="~/Content/Resimler/Kullanici/@ogrt.resim" width="40" />
                            </td>*@
                        <td>@duyuru.baslik</td>
                        <td>@duyuru.icerik</td>
                        <td>@duyuru.tarih.Value.ToLongDateString()</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>





