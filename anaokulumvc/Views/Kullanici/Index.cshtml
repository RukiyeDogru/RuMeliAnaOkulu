@model List<kullanici>
@{
    ViewBag.Title = "Index";

}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kullanıcılar</h3>
        <div class="card-tools">
            <a href="/Kullanici/Ekle" class="btn btn-success">
                <i class="fa fa-plus"> </i>
                Kullanıcı Ekle
            </a>

        </div>
    </div>
    @if (ViewBag.Uyari != null)
    {
        <div class="alert alert-info">
            @ViewBag.Uyari
        </div>
    }
    <!-- /.card-header -->
    <div class="card-body p-0">

        <table class="table table-condensed">

            <thead>
                <tr>
                    <th style="width:50px;">Resim</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Eposta</th>
                    <th style="width:250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kul in Model)
                {
                    <tr>
                        <td>
                            <img src="~/Content/Resimler/Kullanici/@kul.resim" width="40" />
                        </td>
                        <td>@kul.ad</td>
                        <td>@kul.soyad</td>
                        <td>@kul.eposta</td>
                        <td>
                            @*<a href="/Kullanici/Test/@kul.kullaniciID" class="btn btn-warning" title="Test">

                                    <i class="fa fa-search"></i>
                                </a>*@
                            <a href="/Kullanici/Detay/@kul.kullaniciID" class="btn btn-default" title="Detayı görmek için tıklayınız">

                                <i class="fa fa-search"></i>
                            </a>


                            <a href="/Kullanici/Duzenle/@kul.kullaniciID" class=" btn btn-info" title="Düzenle">
                                <i class=" fa fa-edit"></i>
                            </a>
                            <a href="/Kullanici/Sil/@kul.kullaniciID" class=" btn btn-danger" title="Sil" onclick="return confirm('Silmek İstediğinizden Emin Misiniz?')">
                                <i class=" fa fa-trash"></i>
                            </a>




                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>




