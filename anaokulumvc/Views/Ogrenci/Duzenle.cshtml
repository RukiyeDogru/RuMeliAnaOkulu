@model ogrenci
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Öğrenci Düzenle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("Duzenle", "Ogrenci", FormMethod.Post, new { enctype = "multipart / form - data" }))
    {
        @Html.HiddenFor(x => x.ogrenciID)


    <div class="card-body">

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger alert-dismissible">

                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                <h5>
                    <i class="icon fa fa-ban"></i>
                    Dikkat
                </h5>
                @ViewBag.Hata
            </div>




        }

        <div class="form-group">
            <label>Ad</label>
            @*<input name="ad" class="form-control" id="ad" placeholder="Adınızı giriniz">*@
            @Html.TextBoxFor(x => x.ad, new { @class = "form-control", @placeholder = "Adınızı giriniz" })

        </div>
        <div class="form-group">
            <label>Soyad</label>
            @*<input name="soyad" class="form-control" id="soyad" placeholder="Soyadınızı giriniz">*@
            @Html.TextBoxFor(x => x.soyad, new { @class = "form-control", @placeholder = "Soyadınızı giriniz" })
        </div>



        <div class="form-group">
            @Html.LabelFor(x => x.cinsiyet)
            @Html.TextBoxFor(x => x.cinsiyet, new { @class = "form-control", @placeholder = "Cinsiyet giriniz" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.dogumTar)
            @Html.TextBoxFor(x => x.dogumTar, new { @class = "form-control", @placeholder = "Doğum Tarihi giriniz" })
        </div>




    </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>


        
    }
</div>




