@model List<ogrenci>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Öğrenciler</h3>
        @if (ViewBag.Uyari != null)
        {
            <div class="alert alert-info">
                @ViewBag.Uyari
            </div>
        }
        <div class="card-tools">
            <a href="/Ogrenci/Ekle" class="btn btn-success">
                <i class="fa fa-plus"> </i>
                Öğrenci Ekle
            </a>

        </div>
    </div>

    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-condensed">

            <thead>
                <tr>
                    @*<th style="width:50px;">Resim</th>*@
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Cinsiyet</th>
                    <th>Doğum Tarihi</th>

                    <th style="width:250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ogr in Model)
                {
                    <tr>
                        @*<td>
                                <img src="~/Content/Resimler/Kullanici/@ogrt.resim" width="40" />
                            </td>*@
                        <td>@ogr.ad</td>
                        <td>@ogr.soyad</td>
                        <td>@ogr.cinsiyet</td>
                        <td>@ogr.dogumTar.Value.ToShortDateString()</td>

                        <td>
                            @*<a href="/Ogeretmen/Index/@ogrt.ogretmenID" class="btn btn-warning" title="Test">

                                <i class="fa fa-search"></i>*@
                            @*</a>
                                <a href="/Kullanici/Detay/@ogrt.ogretmenID" class="btn btn-default" title="Detayı görmek için tıklayınız">

                                    <i class="fa fa-search"></i>
                                </a>*@


                            <a href="/Ogrenci/Duzenle/@ogr.ogrenciID" class=" btn btn-info" title="Düzenle">
                                <i class=" fa fa-edit"></i>
                            </a>
                            <a href="/Ogrenci/Sil/@ogr.ogrenciID" class=" btn btn-danger" title="Sil" onclick="return confirm('Silmek İstediğinizden Emin Misiniz?')">
                                <i class=" fa fa-trash"></i>
                            </a>




                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>


